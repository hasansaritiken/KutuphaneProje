@model Kutuphane.Models.KitapOdunc
@using Kutuphane.Models

@{
    ViewData["Title"] = "Yeni Ödünç Verme";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni Ödünç Verme</h3>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        <form method="post">
            <div class="text-danger">@Html.ValidationSummary()</div>

            <div class="form-group">
                <label>Kitap</label>
                <select name="KitapId" class="form-control">
                    <option value="">Kitap Seçin</option>
                    @foreach (var kitap in ViewBag.Kitaplar)
                    {
                        <option value="@kitap.Id">@kitap.KitapAdi</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Öğrenci</label>
                <select name="OgrenciId" class="form-control">
                    <option value="">Öğrenci Seçin</option>
                    @foreach (var ogrenci in ViewBag.Ogrenciler)
                    {
                        <option value="@ogrenci.Id">@ogrenci.OgrenciAdi @ogrenci.OgrenciSoyadi</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Ödünç Ver</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select').select2({
                theme: 'bootstrap4'
            });
        });
    </script>
}
