@model Kutuphane.Models.Kategori

@{
    ViewData["Title"] = "Kategori Güncelle";
}

<h2>Kategori Güncelle</h2>

<form asp-action="Guncelle" method="post">
    <div class="form-group">
        <label asp-for="KategoriAdi" class="control-label"></label>
        <input asp-for="KategoriAdi" class="form-control" />
        <span asp-validation-for="KategoriAdi" class="text-danger"></span>
    </div>
    <div class="form-group"></div>
        <label asp-for="Aciklama" class="control-label"></label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}