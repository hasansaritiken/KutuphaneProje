@model IEnumerable<Kategori>

@{
    ViewData["Title"] = "Kategoriler";
}
<a asp-action="Ekle" class="btn btn-success">Yeni Kategori Ekle</a>

<h1>Kategori</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var Kategori in Model)
        {
            <tr>
                <td>@Kategori.Id</td>
                <td>@Kategori.KategoriAdi</td>
                <td>@Kategori.Aciklama</td>
                <td>
                    <a asp-action="Guncelle" asp-route-id="@Kategori.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Sil" asp-route-id="@Kategori.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
