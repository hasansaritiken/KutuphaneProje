@model Kutuphane.Models.Kategori

@{
    ViewData["Title"] = "Kategori Ekle";
}

<h2>Kategori Ekle</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label asp-for="KategoriAdi" class="control-label"></label>
        <input asp-for="KategoriAdi" class="form-control" />
        <span asp-validation-for="KategoriAdi" class="text-danger"></span>
    </div>
    <div class="form-group"></div>
        <label asp-for="Aciklama" class="control-label"></label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}